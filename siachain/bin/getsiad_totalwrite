#! /bin/bash
siapid=$(pgrep --exact siad)
rw=$(cat "/proc/$siapid/io" | grep -w "write_bytes" |awk '{print $2}')
# We print in GiB
rwi=`echo $rw/1024/1024/1024 | bc -l`
printf "%.2f GiB\n" $rwi

